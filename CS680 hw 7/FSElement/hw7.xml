<?xml version="1.0" encoding="UTF-8"?>
<project name="hw7" basedir="" default="run">
	<property environment="env"/>

	<echo message= "JUNIT_HOME: ${env.JUNIT}"/>
	<echo message= "ANT_HOME: ${env.ANT_HOME}"/>

	<property name="src" location="src"/>
	<property name="bin" location="bin"/>
	<property name="test.src" location="test/src"/>
	<property name="test.bin" location="test/bin"/>
	<property name="test.reports" location="test/reports" />

	<path id="classpath">
		<pathelement location="bin"/>
		<pathelement location="test/bin"/>
		<fileset dir="${env.JUNIT}" includes="*.jar" excludes="org.junit.vintage.*.jar"/>
		<fileset dir="${env.JUNIT}" includes="org.opentest4j*.jar"/>
		<fileset dir="${env.JUNIT}" includes="org.apiguardian*.jar"/>
	</path>

	<target name="init">
		<mkdir dir= "${bin}"/>
		<mkdir dir= "${test.bin}"/>
		<mkdir dir= "/reports"/>
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
			<classpath refid = "classpath"/>
			<include name="edu/umb/cs680/hw07/Directory.java"/>
			<include name="edu/umb/cs680/hw07/File.java"/>
			<include name="edu/umb/cs680/hw07/FSElement.java"/>
			<include name="edu/umb/cs680/hw07/FileSystem.java"/>
		</javac>
		<javac srcdir="${test.src}" destdir="${test.bin}" includeAntRuntime="no">
			<classpath refid = "classpath"/>
			<include name="edu/umb/cs680/hw07/DirectoryTest.java"/>
			<include name="edu/umb/cs680/hw07/FileTest.java"/>
			<include name="edu/umb/cs680/hw07/FileSystemTest.java"/>
		</javac>
	</target>

	<target name="run" depends="compile">
		<junitlauncher printSummary="true">
			<classpath refid="classpath" />
			<testclasses outputdir="${test.reports}">
				<fileset dir="${test.bin}">
	               <include name="edu/umb/cs680/hw07/DirectoryTest.class" />
	               <include name="edu/umb/cs680/hw07/FileTest.class" />
	               <include name="edu/umb/cs680/hw07/FileSystemTest.class" />
	            </fileset>
	            <listener type="legacy-plain" sendSysOut="true" />
	         </testclasses>
	      </junitlauncher>
	   </target>
	   
	   <target name="clean" depends="run">
	      <delete includeemptydirs="true">
	         <fileset dir="${bin}/edu/umb/cs680/hw07" includes="**/*" />
	         <fileset dir="${test.bin}/edu/umb/cs680/hw07" includes="**/*" />
	      </delete>
	   </target>
	</project>







